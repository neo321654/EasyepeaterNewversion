<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback"/>

    </PreferenceCategory>
    <PreferenceCategory
        app:key="time_loop"
        app:title="Интервал повторений">

        <EditTextPreference
            app:key="time_repeat"
            app:title="Интервал повторений"
            app:summary="Устанавливает время через которое появиться фраза"
            app:defaultValue="20"
            app:dialogTitle="Введите колличество минут (от 15 до )" />

    </PreferenceCategory>

</PreferenceScreen>